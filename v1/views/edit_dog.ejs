<h1>EDIT FORM</h1>


<%-include ('header')  %>
<div class="container">
<div class="row">
<h1 style="text-align: center;">Add a new Dog</h1>
<div style="width:30%; margin:0 auto;">
<form action="/dogs/<%= dog._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="form-group">
    <input class="form-control" type="text" name="dog[breed]" value="<%=dog.breed%>">
    </div>
    <div class="form-group">
    <input class="form-control" type="file" name="image" id="image" >
    </div>
    <div>
        <input class="form-control" type="text" name="dog[description]" value="<%=dog.description%>">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control" type="text" name="dog[email]" id="email" value="<%= dog.email %>">
    </div>
    <div class="form-group">
        <label for="phone">Phone</label>
        <input class="form-control" type="text" name="dog[phone]" id="phone" value="<%= dog.phone %>">
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <input class="form-control" type="text" name="dog[price]" id="price" value="<%= dog.price %>">
    </div>
    <div class="form-group">
        <label for="location">Location</label>
        <input class="form-control" type="text" name="dog[location]" id="location" value="<%= dog.location %>">
    </div>
    <div class="form-group">
    <button class="btn btn-success btn-lg btn-block">Submit</button>
    </div>
</form>


<div class="form-group">
<a class="btn btn-primary btn-large" href="/dogs">Go Back</a>
</div>
</div>
</div>
</div>
<%-include ('footer')  %>

