<%-include ('header')  %>
<div class="container">
<div class="row">
<h1 style="text-align: center;">Add a new Ngo</h1>
<div style="width:30%; margin:0 auto;">
<form action="/ngo" method="POST">
    <div class="form-group">
    <input class="form-control" type="text" name="name" placeholder="Name">
    </div>
    <div class="form-group">
    <input class="form-control" type="text" name="image" placeholder="Image url">
    </div>
    <div>
        <textarea class="form-control" name="description" placeholder="Description"></textarea>
    </div>
    <div>
        <input class="form-control" type="text" name="email" placeholder="Email">
    </div>
    <div>
        <input class="form-control" type="text" name="phone" placeholder="Phone">
    </div>
    <div>
        <input class="form-control" type="text" name="location" placeholder="City,State">
    </div>
    <div>
        <input class="form-control" type="text" name="mapUrl" placeholder="Map URL">
    </div>

    <div class="form-group">
    <button class="btn btn-success btn-lg btn-block/.dfghjkl,.?">Submit</button>
    </div>
</form>


<div class="form-group">
<a class="btn btn-primary btn-large" href="/dogs">Go Back</a>
</div>
</div>
</div>
</div>
<%-include ('footer')  %>