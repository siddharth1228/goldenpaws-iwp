<%-include ('header')  %>
<div class="container">
<div class="row">
<h1 style="text-align: center;">Add a new Dog</h1>
<div style="width:30%; margin:0 auto;">
<form action="/dogs" method="POST" enctype="multipart/form-data">
    <div class="form-group">
    <input class="form-control" type="text" name="breed" placeholder="Breed">
    </div>
    <div class="form-group">
    <input class="form-control" type="file" name="image" placeholder="Image" accept="image/*" class="custom-file-input" id="image">
    </div>
    <div>
        <input class="form-control" type="text" name="description" placeholder="Description">
    </div>
    <div>
        <input class="form-control" type="text" name="email" placeholder="Email">
    </div>
    <div>
        <input class="form-control" type="text" name="phone" placeholder="Phone">
    </div>
    <div>
        <input class="form-control" type="text" name="price" placeholder="Price">
    </div>
    <div>
        <input class="form-control" type="text" name="location" placeholder="City,State">
    </div>

    <div class="form-group">
    <button class="btn btn-success btn-lg btn-block/.dfghjkl,.?">Submit</button>
    </div>
</form>


<div class="form-group">
<a class="btn btn-primary btn-large" href="/dogs">Go Back</a>
</div>
</div>
</div>
</div>
<%-include ('footer')  %>
